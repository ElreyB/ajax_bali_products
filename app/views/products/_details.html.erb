<div class="card">
  <div class="card-image">
    <%= image_tag @product.image.url(:medium)%>
    <span class="card-title"><h4><%= @product.name %></h4></span>
  </div>
  <div class="card-content">
    <p><%= @product.description %></p>
    <p><%= number_to_currency @product.price %></p>
  </div>
  
</div>
