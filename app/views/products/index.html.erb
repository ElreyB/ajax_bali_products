<h3>Products</h3>

<div class="row">
  <div class="section">
    <% @products.each do |product| %>
      <div class="col s4">
        <h3><%= link_to product.name, product_path(product), id: "product#{product.id}",remote: true %></h3>
        <div id="product-details<%=product.id%>">

        </div>
        <div class="card-action">
          <%= form_for @order_item, remote: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
          <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
